{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item active">Profile</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">Profile</div>
        <div class="card-body">
            <table class="table table-bordered mb-0">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>
                            {{ user.name.full }}
                            <a href="{{ path('profile') }}" class="btn btn-sm btn-outline-primary"><span class="fa fa-pencil"></span></a>
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>
                            {{ user.email ? user.email.value : '' }}
                            <a href="{{ path('profile') }}" class="btn btn-sm btn-outline-primary"><span class="fa fa-pencil"></span></a>
                        </td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ user.date|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ user.role.displayName }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ user.status.displayName }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}